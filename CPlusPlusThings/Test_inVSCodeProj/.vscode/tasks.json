{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/Test_inVSCodeProj/src/*.cpp",
				"-I",
				"${workspaceFolder}/Test_inVSCodeProj/include",
				"-std=c++11",
				"-o",
				"${workspaceFolder}/Test_inVSCodeProj/bin/main",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}